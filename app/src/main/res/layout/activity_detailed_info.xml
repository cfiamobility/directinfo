<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedInfo">

    <include
        android:id="@+id/detailsToolbar"
        layout="@layout/toolbar_layout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailsToolbar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cvPersonDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#b2dfdb"
                app:cardCornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="32dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="16dp"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.502"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="TextView" />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/tvName"
                        app:layout_constraintStart_toStartOf="@+id/tvName"
                        app:layout_constraintTop_toBottomOf="@+id/tvName"
                        tools:text="TextView" />

                    <ImageView
                        android:id="@+id/ivPersonPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toStartOf="@+id/tvTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvTitle"
                        app:srcCompat="@drawable/ic_account_circle_white_120dp" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/addToContactsFAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="32dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:elevation="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/ivPersonPhoto"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvTitle"
                        app:srcCompat="@drawable/ic_person_add_white_48dp" />

                    <ImageButton
                        android:id="@+id/btnCallPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/md_teal_100"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/addToContactsFAB"
                        app:srcCompat="@drawable/ic_phone_red_24dp" />

                    <TextView
                        android:id="@+id/tvPrimaryPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        app:layout_constraintStart_toEndOf="@+id/btnCallPrimary"
                        app:layout_constraintTop_toTopOf="@+id/btnCallPrimary"
                        tools:text="TextView" />

                    <TextView
                        android:id="@+id/tvPrimaryPhoneDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/work"
                        app:layout_constraintStart_toStartOf="@+id/tvPrimaryPhone"
                        app:layout_constraintTop_toBottomOf="@+id/tvPrimaryPhone" />

                    <ImageButton
                        android:id="@+id/btnTextMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@color/md_teal_100"
                        app:layout_constraintEnd_toEndOf="@+id/addToContactsFAB"
                        app:layout_constraintTop_toTopOf="@+id/tvMobilePhone"
                        app:srcCompat="@drawable/ic_textsms_red_24dp" />

                    <ImageButton
                        android:id="@+id/btnCallMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/md_teal_100"
                        app:layout_constraintStart_toStartOf="@+id/btnCallPrimary"
                        app:layout_constraintTop_toBottomOf="@+id/tvPrimaryPhoneDisplay"
                        app:srcCompat="@drawable/ic_phone_red_24dp" />

                    <TextView
                        android:id="@+id/tvMobilePhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        app:layout_constraintStart_toStartOf="@+id/tvPrimaryPhoneDisplay"
                        app:layout_constraintTop_toTopOf="@+id/btnCallMobile" />

                    <TextView
                        android:id="@+id/tvMobilePhoneDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile"
                        app:layout_constraintStart_toStartOf="@+id/tvMobilePhone"
                        app:layout_constraintTop_toBottomOf="@+id/tvMobilePhone" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="?android:attr/listDivider"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvMobilePhoneDisplay" />

                    <ImageButton
                        android:id="@+id/btnSendEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/md_teal_100"
                        app:layout_constraintStart_toStartOf="@+id/btnCallMobile"
                        app:layout_constraintTop_toBottomOf="@+id/divider2"
                        app:srcCompat="@drawable/ic_email_red_24dp" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        app:layout_constraintStart_toStartOf="@+id/tvMobilePhoneDisplay"
                        app:layout_constraintTop_toTopOf="@+id/btnSendEmail" />

                    <TextView
                        android:id="@+id/tvEmailDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/work"
                        app:layout_constraintStart_toStartOf="@+id/tvEmail"
                        app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="?android:attr/listDivider"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvEmailDisplay" />

                    <ImageButton
                        android:id="@+id/btnMapPhysicalAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/md_teal_100"
                        app:layout_constraintStart_toStartOf="@+id/btnSendEmail"
                        app:layout_constraintTop_toBottomOf="@+id/divider3"
                        app:srcCompat="@drawable/ic_location_red_24dp" />

                    <TextView
                        android:id="@+id/tvPhysicalAddressTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/physicalAddress"
                        app:layout_constraintStart_toStartOf="@+id/tvEmailDisplay"
                        app:layout_constraintTop_toTopOf="@+id/btnMapPhysicalAddress" />

                    <TextView
                        android:id="@+id/tvPhysicalAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/tvPhysicalAddressTitle"
                        app:layout_constraintTop_toBottomOf="@+id/tvPhysicalAddressTitle"
                        tools:text="TextView" />

                    <View
                        android:id="@+id/divider4"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="?android:attr/listDivider"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPhysicalAddress" />

                    <ImageButton
                        android:id="@+id/btnMapPostalAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/md_teal_100"
                        app:layout_constraintStart_toStartOf="@+id/btnMapPhysicalAddress"
                        app:layout_constraintTop_toBottomOf="@+id/divider4"
                        app:srcCompat="@drawable/ic_location_red_24dp" />

                    <TextView
                        android:id="@+id/tvPostalAddressTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/postalAddress"
                        app:layout_constraintStart_toStartOf="@+id/tvPhysicalAddress"
                        app:layout_constraintTop_toTopOf="@+id/btnMapPostalAddress" />

                    <TextView
                        android:id="@+id/tvPostalAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        app:layout_constraintStart_toStartOf="@+id/tvPostalAddressTitle"
                        app:layout_constraintTop_toBottomOf="@+id/tvPostalAddressTitle" />

                    <View
                        android:id="@+id/divider5"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="?android:attr/listDivider"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPostalAddress" />

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>