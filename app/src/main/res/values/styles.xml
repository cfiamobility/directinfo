<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_red_700</item>
        <item name="colorPrimaryDark">@color/md_red_900</item>
        <item name="colorAccent">@color/md_red_A700</item>
        <item name="android:textColorSecondary">@color/md_grey_300</item>
        <item name="android:icon">@color/md_white_1000</item>
        <item name="android:windowBackground">@color/md_grey_100</item>
        <item name="android:navigationBarColor">@color/md_red_900</item>
        <item name="cardBackgroundColor">@color/md_red_A700</item>

        <item name="android:fastScrollTextColor">@color/colorPrimary</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <item name="android:fastScrollPreviewBackgroundRight">@color/colorPrimary</item>

        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>


    </style>


<!--overflow button color-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/md_black_1000 </item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>
